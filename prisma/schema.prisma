datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model Profile {
  id         String   @id @default(uuid())
  userId     String   @unique
  email      String   @unique
  firstName  String
  lastName   String

  favMovies  Json
  favSeries  Json
  favActors  Json

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
